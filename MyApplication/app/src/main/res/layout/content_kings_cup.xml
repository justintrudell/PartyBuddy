<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.justin.myapplication.KingsCupActivity"
    tools:showIn="@layout/activity_kings_cup">

    <ImageView
        android:id="@+id/kingsCupImageView"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="390dp"
        android:layout_height="170dp"
        android:src="@drawable/kings"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/kingsCupDesc"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:typeface="sans"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/kingsCupPlayers"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:typeface="sans"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/kingsCupWhatYouNeed"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:src="@drawable/whatyouneed"
        android:onClick="goToKingsCupMaterials"/>

    <ImageView
        android:id="@+id/kingsCupHowYouPlay"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:src="@drawable/howtoplay"
        android:onClick="goToKingsCupHowToPlay"/>


</LinearLayout>
